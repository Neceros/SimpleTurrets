<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<HediffDef ParentName="InjuryBase">
		<defName>Tazed</defName>
		<label>tazed</label>
		<labelNoun>tazed muscle</labelNoun>
		<hediffClass>Hediff_Injury</hediffClass>
		<stages>
			<li>
				<partIgnoreMissingHP>true</partIgnoreMissingHP>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_TendDuration">
				<labelTendedWell>bandaged</labelTendedWell>
				<labelTendedWellInner>sutured</labelTendedWellInner>
				<labelSolidTendedWell>set</labelSolidTendedWell>
			</li>
		</comps>
		<injuryProps>
			<painPerSeverity>0.025</painPerSeverity>
			<bleedRate>0</bleedRate>
			<canMerge>false</canMerge>
			<destroyedLabel>Tazed off</destroyedLabel>
			<destroyedOutLabel>Tazed out</destroyedOutLabel>
		</injuryProps>
	</HediffDef>
	
	<DamageDef>
		<defName>Tazer</defName>
		<label>tazer prong</label>
		<workerClass>DamageWorker_AddInjury</workerClass>
		<externalViolence>true</externalViolence>
		<deathMessage>{0} has been killed by being tazed.</deathMessage>
		<hediff>Tazed</hediff>
		<hediffSolid>Tazed</hediffSolid>
		<harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
		<impactSoundType>Electric</impactSoundType>
		<armorCategory>Sharp</armorCategory>
		<overkillPctToDestroyPart>100~100</overkillPctToDestroyPart>
