<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <HediffDef ParentName="DiseaseBase">
        <defName>STTazed</defName>
        <label>tazed</label>
        <labelNoun>being tazed</labelNoun>
        <lethalSeverity>1.25</lethalSeverity>
        <isBad>false</isBad>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-2.2</severityPerDay>
            </li>
        </comps>
        <injuryProps>
            <destroyedLabel>Euthanized</destroyedLabel>
            <destroyedOutLabel>Euthanized</destroyedOutLabel>
        </injuryProps>
        <stages>
            <li>
                <minSeverity>0.1</minSeverity>
                <label>minor</label>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.7</setMax>
                    </li>
                </capMods>
            </li>
            <li>
                <minSeverity>0.25</minSeverity>
                <label>moderate</label>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.5</setMax>
                    </li>
                </capMods>
            </li>
            <li>
                <minSeverity>0.4</minSeverity>
                <label>severe</label>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.25</setMax>
                    </li>
                </capMods>
            </li>
            <li>
                <minSeverity>0.60</minSeverity>
                <label>extreme</label>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.1</setMax>
                    </li>
                </capMods>
            </li>
            <li>
                <minSeverity>0.95</minSeverity>
                <lifeThreatening>true</lifeThreatening>
                <deathMtbDays>0.2</deathMtbDays>
                <label>lethal</label>
            </li>
        </stages>
    </HediffDef>

    <DamageDef>
        <defName>TaserNeedle</defName>
        <label>taser needle</label>
        <workerClass>DamageWorker_AddInjury</workerClass>
        <externalViolence>true</externalViolence>
        <deathMessage>{0} has been needle pronged to death.</deathMessage>
        <hediff>Pronged</hediff>
        <harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
        <impactSoundType>Bullet</impactSoundType>
        <armorCategory>Sharp</armorCategory>
        <overkillPctToDestroyPart>0~0.7</overkillPctToDestroyPart>
        <isRanged>true</isRanged>
        <makesAnimalsFlee>false</makesAnimalsFlee>
    </DamageDef>

    <HediffDef ParentName="InjuryBase">
        <defName>Pronged</defName>
        <label>pronged</label>
        <labelNoun>a needle prong wound</labelNoun>
        <comps>
          <li Class="HediffCompProperties_TendDuration">
            <labelTendedWell>bandaged</labelTendedWell>
            <tendAllAtOnce>true</tendAllAtOnce>
          </li>
          <li Class="HediffCompProperties_Infecter">
            <infectionChance>0.03</infectionChance>
          </li>
        </comps>
        <injuryProps>
            <painPerSeverity>0.00125</painPerSeverity>
            <averagePainPerSeverityPermanent>0.000625</averagePainPerSeverityPermanent>
            <bleedRate>0.005</bleedRate>
            <canMerge>false</canMerge>
            <destroyedLabel>Shot off</destroyedLabel>
            <destroyedOutLabel>Shot out</destroyedOutLabel>
        </injuryProps>
    </HediffDef>
</Defs>